<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Dark cracked stone gradient -->
    <gradient
        android:type="linear"
        android:angle="135"
        android:startColor="#2B2424"
        android:centerColor="#1F1A1A"
        android:endColor="#141010" />
    
    <!-- Rounded corners -->
    <corners android:radius="12dp" />
    
    <!-- Dark red inner border -->
    <stroke
        android:width="1dp"
        android:color="#7A1414" />
    
</shape>