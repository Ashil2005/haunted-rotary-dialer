<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Dark wooden background to match dial -->
    <gradient
        android:type="linear"
        android:angle="90"
        android:startColor="#3A1F0F"
        android:endColor="#251309" />
    
    <!-- Rounded corners -->
    <corners android:radius="8dp" />
    
    <!-- Orange border to match holes -->
    <stroke
        android:width="2dp"
        android:color="#A44A16" />
    
</shape>