<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="60dp"
                android:centerColor="#4DFF8C2B"
                android:endColor="#00FF8C2B" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Main button background -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <!-- Halloween orange gradient -->
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FF8C2B"
                android:centerColor="#E6751F"
                android:endColor="#A44A16" />
            
            <!-- Rounded corners -->
            <corners android:radius="12dp" />
            
            <!-- Dark orange border -->
            <stroke
                android:width="2dp"
                android:color="#7A3510" />
        </shape>
    </item>
    
</layer-list>